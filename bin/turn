#!/usr/bin/env ruby

require_relative '../lib/turn'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
display_board(board)

def turn(board)
  puts "Please enter 1-9:"
  user_input= gets.strip
  input_to_index(user_input)
  if valid_move?(board, index)
    move(board, position, char = "X")
  else
    until user_input.between?(1, 9)
      turn(board)
    end
  end
end
